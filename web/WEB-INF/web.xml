<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>CheckoutQRControl</servlet-name>
        <servlet-class>Chackout.CheckoutQRControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderProcessControl</servlet-name>
        <servlet-class>controller.OrderProcessControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckoutSuccessControl</servlet-name>
        <servlet-class>Chackout.CheckoutSuccessControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckoutBankControl</servlet-name>
        <servlet-class>Chackout.CheckoutBankControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckoutSuccessControl</servlet-name>
        <url-pattern>/checkoutsuccess</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckoutQRControl</servlet-name>
        <url-pattern>/checkoutqr</url-pattern>
    </servlet-mapping>
    <!--    <servlet-mapping>
        <servlet-name>CartUpdateControl</servlet-name>
        <url-pattern>/cartupdate</url-pattern>
    </servlet-mapping>-->
    <servlet-mapping>
        <servlet-name>OrderProcessControl</servlet-name>
        <url-pattern>/orderprocess</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckoutBankControl</servlet-name>
        <url-pattern>/bankCheckout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout> 30 </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>HomeControl</servlet-name>
        <servlet-class>controller.HomeControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartControl</servlet-name>
        <servlet-class>Cart.CartControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartProcess</servlet-name>
        <servlet-class>Cart.CartProcess</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckoutControl</servlet-name>
        <servlet-class>Chackout.CheckoutControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartCheck</servlet-name>
        <servlet-class>Cart.CartCheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ajaxServlet</servlet-name>
        <servlet-class>com.vnpay.common.ajaxServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>vnpayQuery</servlet-name>
        <servlet-class>com.vnpay.common.vnpayQuery</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>vnpayRefund</servlet-name>
        <servlet-class>com.vnpay.common.vnpayRefund</servlet-class>
    </servlet>
    <!--    <servlet>
        <servlet-name>CheckoutSuccessControl</servlet-name>
        <servlet-class>Chackout.CheckoutSuccessControl</servlet-class>
    </servlet>-->
    <servlet-mapping>
        <servlet-name>HomeControl</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartControl</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartProcess</servlet-name>
        <url-pattern>/cartprocess</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckoutControl</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartCheck</servlet-name>
        <url-pattern>/cartcheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ajaxServlet</servlet-name>
        <url-pattern>/vnpayajax/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>vnpayQuery</servlet-name>
        <url-pattern>/vnpayquery/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>vnpayRefund</servlet-name>
        <url-pattern>/vnpayrefund/*</url-pattern>
    </servlet-mapping>
</web-app>
